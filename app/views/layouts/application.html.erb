<!DOCTYPE html>

<html lang="en">
<head>
  <title>Junto</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>



<!-- <div class="navbar navbar-inverse"> -->
 
<div class="navbar">
	<div class="navbar-inner">
	   <div class="container">
		    <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
    			<span class="icon-bar"></span>
    			<span class="icon-bar"></span>
    			<span class="icon-bar"></span>
		    </a><%= link_to "Junto", root_path, class: "brand" %>
		<div class="container nav-collapse">
			<ul class="nav">
        <li><%= link_to "Browse Discussion Topics", topics_path %></li>
        <li><%= link_to "Post Discussion Topics", new_topic_path %></li>
      </ul>
        <ul class="nav pull-right">   
         <% if user_signed_in? %>   
          <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>               
          <% else %>   
          <li><%= link_to "Sign in", new_user_session_path %></li>    
          <% end %>
     <!--      <ul class= "float: right;"> -->
          <li><% if user_signed_in? %> Hi, <%= current_user.email %></li>
          <% end %>
<!-- </ul>  -->
        </ul>  
      </div>
      </div>
    </div>
  </div>
</div>



    <div class="container">
      <div class="row">
        <% if controller.controller_name == 'welcome' %>
          <div class="span12">
            <%= bootstrap_flash %>
            <%= yield %>
          </div>
        <% else %>
          <div class="span9">
            <%= bootstrap_flash %>
            <%= yield %>
          </div>
          <div class="span3">
            <%= yield :sidebar %>
          </div><!--/span-->
        <% end %>
      </div><!--/row-->

    </div> <!-- /container -->


    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>


